{% extends "NfqNomNomBundle:Default:index.html.twig" %}

{% block title %}
    {{ recipe.getRecipeName() }}
{% endblock %}

{% block stylesheets%}
    {{ parent() }}
    {% stylesheets '@NfqNomNomBundle/Resources/public/css/recipe.css' %}
    <link rel="stylesheet" href="{{asset_url}}"  type="text/css"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="error">
        {{ error }}
    </div>

    <h2>
        {{ recipe.getRecipeName() }}
    </h2>


    <div id="firstBox">

        <div id="recipePhotoBox">
           <img id="recipePhoto" src="{{ asset(recipe_photo_path) }}" alt="Symfony!"  />
        </div>
        <div id="recipeIngredients" >
            <ul>

                {% for product in recipe_products %}

                    <li>
                        {{ product.getQuantity() ? product.getQuantity() : '' }}
                        {{ product.getMyProduct().getProductName() }}

                    </li>

                {% endfor %}
            </ul>
        </div>
        <div id="recipePortion">
            <img id="logo1" src="{{ asset(logo1_path) }}"/>
            <div class="info">
                {{ recipe.getPreparationTime() }}
            </div>
            <img id="logo2" src="{{ asset(logo2_path) }}"/>
            <div class="info">
                {{ recipe.getNumberOfServings() }}
            </div>
            <img id="logo3" src="{{ asset(logo3_path) }}"/>
            <div class="info">
                {{ recipe.getMyRecipeCategory().getCategoryName() }}
            </div>


        </div>

    </div>

    <div id="secondBox">
         <div id="recipeInstructions" >
             <h3 style="text-align: center">
                 {{ recipe.getPreparationInstructions() }}
             </h3>
         </div>
    </div>

{% endblock %}