{% extends "NfqNomNomBundle:Default:index.html.twig" %}
{% block content %}
    {{ error }}
    <br>
    <a href="{{ path('Nfq_nom_nom_create_event') }}">Create Event</a>
    <br>
    <span>Events where you're participating in:</span>
    {% for userEvent in userEvents %}
        <a href="{{ path('Nfq_nom_nom_events', {'eventId': userEvent.myEvent.id}) }}">{{ userEvent.myEvent.eventName }}</a>
    {% endfor %}
{% endblock %}